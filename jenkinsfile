pipeline {
    agent any

    environment {
        GITHUB_CREDENTIALS_ID = '61c0f573-47fa-48a7-bc9d-b042a982013f'
        SERVER_CREDENTIALS_ID = '7483a6c8-ab31-42ac-9aa9-1b5ccffc2c60'
        SERVER_IP = '20.244.107.249'
        DEPLOY_DIR = '/var/www/html/drupal1'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Sindhu-M29/drupalfolder.git', credentialsId: env.GITHUB_CREDENTIALS_ID
            }
        }

        stage('Deploy') {
            steps {
                withCredentials([usernamePassword(credentialsId: env.SERVER_CREDENTIALS_ID, usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                    script {
                        sh '''
                        sshpass -p $PASS ssh -o StrictHostKeyChecking=no $USER@$SERVER_IP "mkdir -p $DEPLOY_DIR"
                        sshpass -p $PASS scp -o StrictHostKeyChecking=no -r * $USER@$SERVER_IP:$DEPLOY_DIR
                        sshpass -p $PASS ssh -o StrictHostKeyChecking=no $USER@$SERVER_IP "sudo chown -R www-data:www-data $DEPLOY_DIR"
                        sshpass -p $PASS ssh -o StrictHostKeyChecking=no $USER@$SERVER_IP "sudo chmod -R 755 $DEPLOY_DIR"
                        sshpass -p $PASS ssh -o StrictHostKeyChecking=no $USER@$SERVER_IP "sudo systemctl restart apache2"
                        '''
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Deployed successfully'
        }
        failure {
            echo 'Deployment failed'
        }
    }
}
